<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs.b07.cscb07courseproject">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpPage" />
        <activity android:name=".ClientHomePage" />
        <activity android:name=".ClientLoginPage" />
        <activity android:name=".EditPersonalInfo" />
        <activity android:name=".AdminLogIn" />
        <activity android:name=".AdminHomePage" />
        <activity android:name=".EditClient" />
        <activity android:name=".EditFlight" />
        <activity android:name=".Uploading" />
        <activity android:name=".ViewUploadContent" />
        <activity android:name=".SearchFlights" />
        <activity android:name=".SearchItineraries" />
        <activity android:name=".ViewItineraries" />
        <activity android:name=".BookingSystem">
        </activity>
    </application>
</manifest>